<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="CHN FrameWork Suite" parallel="tests" thread-count="3" verbose="4">

	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>

	<test name="Login Page Test_CHR91">
	  <parameter name="browser" value="chrome"/>
	  <parameter name="browserversion" value="91.0"/>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>
	
	
	<test name="Login Page Test_CHR89">
	  <parameter name="browser" value="chrome"/>
	  <parameter name="browserversion" value="89.0"/>
